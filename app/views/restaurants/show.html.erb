<div class="d-flex flex-column container">
<h1 class="text-center">Infos du restaurant <%= @restaurant.name %></h1>

<div class="text-center">
  <p>Adresse : <%= @restaurant.address %></p>
  <p>Tél : <%= @restaurant.phone_number %></p>
  <p>Catégorie : <%= @restaurant.category %></p>
</div>


<ul class="list-group" class="text-center">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %> / 5</li>
    <li class="list-group-item"><%= review.content %></li>
    <br>
  <% end %>
</ul>


<%= link_to 'Home', restaurants_path, class: "btn btn-primary"%>
<br>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>